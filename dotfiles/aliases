# Aliases from .zshrc, .zshrc_dev, and .zshrc_personal

# General Aliases
# Description: General purpose aliases for common tasks
alias ll="ls -la"  # List files in long format with hidden files
alias cddev="cd $DEV_DIR"  # Change directory to development directory
alias cdproj="cd $DEV_DIR"  # Change directory to projects directory
alias brewup="brew update && brew upgrade"  # Update and upgrade Homebrew packages
alias editzsh="$EDITOR ~/.zshrc"  # Edit .zshrc file
alias editzsh_dev="$EDITOR ~/.zshrc_dev"  # Edit .zshrc_dev file
alias editzsh_personal="$EDITOR ~/.zshrc_personal"  # Edit .zshrc_personal file

# Git Aliases
# Description: Aliases for Git commands
alias gs="git status"  # Show Git status
alias gp="git pull"  # Pull latest changes from Git repository
alias gc="git commit -m"  # Commit changes with a message

# Development Aliases
# Description: Aliases for development tasks
alias suggest='yes "" | gh copilot suggest'  # Shortcut for GitHub Copilot suggestions
alias explain='yes "" | gh copilot explain'  # Shortcut for GitHub Copilot explanations

# Python Aliases
# Description: Aliases for Python commands
alias python="python3"  # Use Python 3
alias pip="pip3"  # Use pip3

# Note: This file should be sourced in the .zshrc file
