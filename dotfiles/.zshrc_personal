# ~/.zshrc_personal - Nate Dryer's Personal Zsh Configuration

# --- Load environment variables from .env file ---
if [ -f "$HOME/.env_personal" ]; then
    export $(cat $HOME/.env_personal | xargs)
fi

# --- Environment Variables ---
export EDITOR="nano"
export DEV_DIR="$HOME/projects"
export LANG="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"
export HISTFILE="$HOME/.zsh_history_personal"
export HISTSIZE=5000
export SAVEHIST=5000
export FUNCNEST=100

# --- Path Configuration ---
export PATH="$HOME/.pyenv/bin:$HOME/.poetry/bin:/opt/homebrew/bin:/usr/local/bin:$PATH"

# --- Homebrew Configuration ---
eval "$(/opt/homebrew/bin/brew shellenv)"

# --- Pyenv Configuration ---
export PYENV_ROOT="$HOME/.pyenv"
eval "$(pyenv init --path)"
eval "$(pyenv init -)"
eval "$(pyenv virtualenv-init -)"

# --- Poetry Configuration ---
export PATH="$HOME/.poetry/bin:$PATH"

# --- GitHub Copilot CLI Configuration ---
if command -v gh &> /dev/null; then
    eval "$(gh copilot alias -- zsh)"
fi

# Source aliases from aliases.zsh
if [ -f "$HOME/development/dotfiles/aliases.zsh" ]; then
    source "$HOME/development/dotfiles/aliases.zsh"
fi

# Source custom functions
if [ -f "$HOME/development/dotfiles/functions/load_env_personal.sh" ]; then
    source "$HOME/development/dotfiles/functions/load_env_personal.sh"
fi

if [ -f "$HOME/development/dotfiles/functions/activate_pyenv_personal.sh" ]; then
    source "$HOME/development/dotfiles/functions/activate_pyenv_personal.sh"
fi
